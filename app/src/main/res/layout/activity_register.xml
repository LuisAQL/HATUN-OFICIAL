<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#4D255A"

    android:layout_height="match_parent"

    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="CREAR CUENTA"
            android:gravity="center"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <androidx.cardview.widget.CardView

                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"

                    android:padding="24dp">


                    <EditText
                        android:id="@+id/editTextCi1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logoci1"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su CI"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />


                    <EditText
                        android:id="@+id/editTextNombreUsu1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logoapellido"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su nombre de usuario"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextApellidosPaterno1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logoapellido"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su apellido paterno"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextApellidoMaterno"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logoapellido"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su apellido materno"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextCorreoUsu"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logocorreo1"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su correo de usuario"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextContrasenia"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logopassword"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su contraseña"
                        android:inputType="textPassword"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />

<!--                    <Spinner-->
<!--                        android:id="@+id/spinnerCiudades"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:background="@drawable/lavender_border"-->
<!--                        android:paddingLeft="8dp"-->
<!--                        android:drawablePadding="8dp"-->
<!--                        android:textSize="15sp"-->
<!--                        android:entries="@array/ciudades"-->
<!--                        android:textColor="@color/black" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/logoubi"
                            android:contentDescription="Imagen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/spinnerCiudades"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/lavender_border"
                            android:drawableLeft="@drawable/logoubi"
                            android:drawablePadding="8dp"
                            android:hint="Ingrese su ciudad"
                            android:paddingLeft="8dp"
                            android:entries="@array/ciudades"
                            android:textColor="@color/black"
                            android:textColorHint="#958E97"
                            android:textSize="15dp" />

                    </LinearLayout>


<!--                    <EditText-->
<!--                        android:id="@+id/editSexo"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:background="@drawable/lavender_border"-->
<!--                        android:drawableLeft="@drawable/logosexo"-->
<!--                        android:drawablePadding="8dp"-->
<!--                        android:hint="Ingrese Sexo"-->
<!--                        android:paddingLeft="8dp"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textColorHint="#958E97"-->
<!--                        android:textSize="15dp" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/logosexo"
                        android:contentDescription="Imagen" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <Spinner

                            android:id="@+id/spinnerSexo"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/lavender_border"
                            android:drawablePadding="8dp"
                            android:entries="@array/sexo_options"
                            android:paddingLeft="8dp"

                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>





                    <EditText
                        android:id="@+id/editTextDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logodire"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su dirección"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextCelular"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logocelular"
                        android:drawablePadding="8dp"
                        android:hint="Ingrese su número de celular"
                        android:inputType="phone"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/logocivil"
                            android:contentDescription="Imagen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/spinnerEstado"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/lavender_border"
                            android:drawableLeft="@drawable/logocivil"
                            android:drawablePadding="8dp"
                            android:hint="Estado Civil"
                            android:entries="@array/estado_civil"
                            android:paddingLeft="8dp"
                            android:textColor="@color/black"
                            android:textColorHint="#958E97"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextFechaNaci"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lavender_border"
                        android:drawableLeft="@drawable/logonaci"
                        android:drawablePadding="8dp"
                        android:hint="Seleccione su fecha de nacimiento"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97"
                        android:textSize="15dp" />




                    <Button
                        android:id="@+id/botonRegistrar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="REGISTRARSE"
                        android:textColor="@color/black"
                        android:textColorHint="#958E97">

                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </ScrollView>

    </LinearLayout>




</RelativeLayout>